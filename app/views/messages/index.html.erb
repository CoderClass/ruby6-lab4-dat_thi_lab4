<h2><%= @room.name %></h2>
<%= form_for [@room, Message.new] do |f| %>
    <%= f.text_field :content, placeholder: 'Your message' %>
    <%= f.text_field :username, placeholder: 'Your name' %>
    <%= f.submit %>
<% end %>

<% @room.messages.each do |message| %>
    <%= message.username  %> : <%= message.content %>
    <br>
<% end %>